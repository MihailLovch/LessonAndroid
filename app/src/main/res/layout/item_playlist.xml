<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/favorite_iv"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            tools:src="@drawable/ic_baseline_back_hand_24"
            tool:layout_constraintStart_toStartOf="parent"
            tool:layout_constraintTop_toTopOf="parent"
            tool:layout_constraintBottom_toBottomOf="parent"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/common_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_message"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            tool:layout_constraintStart_toStartOf="@id/favorite_iv"
            tool:layout_constraintBottom_toTopOf="@id/favorite_iv"
            />
        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/my_favorites"
            android:textColor="@color/black"
            tool:layout_constraintStart_toEndOf="@id/favorite_iv"
            tool:layout_constraintTop_toTopOf="@id/favorite_iv"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            />
        <TextView
            android:id="@+id/tracks_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            tool:layout_constraintStart_toStartOf="@id/title_tv"
            tool:layout_constraintTop_toBottomOf="@id/title_tv"
            android:text="@string/tracks_amount"
            />
        <TextView
            android:id="@+id/len_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp"
            tool:layout_constraintStart_toEndOf="@id/tracks_tv"
            tool:layout_constraintTop_toTopOf="@id/tracks_tv"
            android:text="@string/tracks_length"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="40dp"
            android:layout_height="80dp"
            android:src="@drawable/more_vert"
            tool:layout_constraintEnd_toEndOf="parent"
            tool:layout_constraintTop_toTopOf="parent"
            tool:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>